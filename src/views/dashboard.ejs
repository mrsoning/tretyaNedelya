<%- include('layout', { body: `
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Панель управления
        </h1>
    </div>
</div>

<!-- Статистические карточки в другом порядке -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white" style="background-color: #007bff;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Мои заявки</h5>
                        <h2 class="mb-0" id="myRequestsCount">-</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="background-color: #0056b3;">
                <a href="/requests" class="text-white text-decoration-none">
                    Просмотреть <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    ${user.type === 'Менеджер' || user.type === 'Оператор' ? `
    <div class="col-md-3">
        <div class="card text-white" style="background-color: #ffc107; color: #212529;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">В работе</h5>
                        <h2 class="mb-0" id="inProgressCount">-</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-cog fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="background-color: #e0a800;">
                <a href="/requests?status=В процессе ремонта" class="text-dark text-decoration-none">
                    Просмотреть <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white" style="background-color: #17a2b8;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Среднее время</h5>
                        <h2 class="mb-0" id="avgTime">-</h2>
                        <small>дней</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="background-color: #138496;">
                <span class="text-white">выполнения заявки</span>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white" style="background-color: #28a745;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Всего заявок</h5>
                        <h2 class="mb-0" id="totalRequestsCount">-</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-list fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="background-color: #1e7e34;">
                <a href="/statistics" class="text-white text-decoration-none">
                    Статистика <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    ` : ''}
</div>

<!-- Основной контент - поменяем местами блоки -->
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>Активность по заявкам
                </h5>
            </div>
            <div class="card-body">
                <div id="recentRequests">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Загрузка данных...</span>
                        </div>
                        <p class="mt-2 text-muted">Загружаем последние заявки...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bell me-2"></i>Системные уведомления
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-2">
                    <small><i class="fas fa-info-circle me-1"></i>Добро пожаловать в систему БытСервис!</small>
                </div>
                ${user.type === 'Мастер' ? `
                <div class="alert alert-warning mb-0">
                    <small><i class="fas fa-exclamation-triangle me-1"></i>У вас есть новые назначенные заявки</small>
                </div>
                ` : ''}
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>Панель действий
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/users/profile" class="btn btn-secondary">
                        <i class="fas fa-user-cog me-2"></i>Настройки профиля
                    </a>
                    
                    ${user.type === 'Менеджер' || user.type === 'Оператор' ? `
                    <a href="/statistics" class="btn btn-info">
                        <i class="fas fa-chart-line me-2"></i>Аналитика
                    </a>
                    ` : ''}
                    
                    <a href="/requests" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Найти заявки
                    </a>
                    
                    ${user.type === 'Оператор' || user.type === 'Менеджер' ? `
                    <a href="/requests/new" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Создать заявку
                    </a>
                    ` : ''}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Загрузка статистики
${user.type === 'Менеджер' || user.type === 'Оператор' ? `
fetch('/statistics/api/summary')
    .then(response => response.json())
    .then(data => {
        document.getElementById('totalRequestsCount').textContent = data.total_requests;
        document.getElementById('inProgressCount').textContent = data.in_progress;
        document.getElementById('avgTime').textContent = data.avg_completion_days || '0';
    })
    .catch(error => console.error('Ошибка загрузки статистики:', error));
` : ''}

// Загрузка последних заявок
fetch('/requests?limit=5')
    .then(response => response.text())
    .then(html => {
        document.getElementById('recentRequests').innerHTML = 
            '<div class="text-center py-3"><p class="text-muted mb-3">Для детального просмотра заявок используйте раздел поиска</p><a href="/requests" class="btn btn-outline-primary"><i class="fas fa-external-link-alt me-2"></i>Перейти к заявкам</a></div>';
    })
    .catch(error => {
        document.getElementById('recentRequests').innerHTML = 
            '<div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i>Ошибка загрузки данных</div>';
    });
</script>
` }) %>